@using ITI.Mvc.LinkedIn.Models
@model List<ITI.Mvc.LinkedIn.Models.ApplicationUser>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="~/Style and structure/Search-Page/bootstrap.css" rel="stylesheet" />

    <link href="~/Style and structure/Home-Page/home-style.css" rel="stylesheet" />

    <link href="~/Style and structure/Login-Page/style.css" rel="stylesheet" />

    <link href="~/Style and structure/Profile(2)-Page/profile-style.css" rel="stylesheet" />
    <link href="~/Style and structure/Search-Page/search-style.css" rel="stylesheet" />
    <link href="~/Style and structure/Loading-Page/loading-style.css" rel="stylesheet" />

    
</head>
<body>


    <!-- Main Search section -->
    @Html.Partial("_PartialTopNavBar")

    <div id="LoadingPage" class='face' hidden>
        <div class='container'>
            <div class="main-icon">
                <i class="fab fa-linkedin"></i>
            </div>

            <span class='loading'></span>
            <div class="caption">
                <h2>Opportunities</h2>
                <ul>
                    <li>O</li>
                    <li>N</li>
                    <li>T</li>
                    <li>H</li>
                    <li>E</li>
                    <li>W</li>
                    <li>A</li>
                    <li>Y</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="replacing">


        <div id="search-form" class="  main-search-section  col-lg-push-2 col-xs-11 col-lg-8">
            <div class=" main-search-header col-xs-12">Showing @Model.Count results</div>
            @foreach (ApplicationUser item in Model)
            {
                <div class=" search-unit-container col-xs-12">
                    <div class="col-xs-3 col-lg-1">
                        <div class="search-unit-img-container ">
                            <a href="">
                                <img src="6.jpg" class=" search-unit-img">
                            </a>
                        </div>
                    </div>


                    <div class="search-unit-details col-xs-8 ">
                        <div class="search-unit-name col-xs-12">
                            @Ajax.ActionLink(item.Fname + " " + item.Lname, "UserProfile", "Account", new { userid = item.Id }, new AjaxOptions
                       {
                           HttpMethod = "POST",
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "replacing"
                       }, htmlAttributes: new { @class = "search-unit-name-link" })


                           
                        </div>

                        <div class="search-unit-job col-xs-12">@item.Industry</div>
                        <div class="search-unit-country col-xs-12">@item.Email</div>
                    </div>

                    <div class="search-unit-connect-btn col-lg-2 col-xs-3 col-lg-push-1 col-xs-push-4">
                        <button class="btn btn-primary connect-btn">Connect</button>
                    </div>

                </div>
            }






        </div>

    </div>

    <script src="~/Style and structure/Home-Page/jquery-3.3.1.min.js"></script>
    <script src="~/Style and structure/Home-Page/jquery-1.10.2.min.js"></script>
    <script src="~/Style and structure/Home-Page/home-app.js"></script>
    <script src="~/Style and structure/Home-Page/bootstrap.min.js"></script>
    <script src="~/Style and structure/Login-Page/app.js"></script>
    <script src="~/Style and structure/Profile(2)-Page/profile-app.js"></script>
    <script src="~/Style and structure/Search-Page/search-app.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
         function showLoadingPage() {
             $('#LoadingPage').show();
             @*$('#LoadingPage').append(
                 '<img src="@Url.Content("~/Images/AjaxLoaderImg.gif")" alt="Loading..."class="ajax-loader" />') *@
     ;
         }

         function hideLoadingPage() {
             setTimeout(function () {
                 //$('.ajax-loader').remove();
                 $('#LoadingPage').hide();
             }, 2000);
         }

    </script>
</body>

</html>
