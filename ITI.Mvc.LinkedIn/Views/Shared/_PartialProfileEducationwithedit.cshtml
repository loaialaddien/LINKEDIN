@using ITI.Mvc.LinkedIn.Models.Entities
@*@model ITI.Mvc.LinkedIn.ViewModels.AppUserViewModel*@

<!-- Education  section -->
<!------------------------------->
<div class="education col-lg-push-2 col-lg-8 col-xs-11">

    <div class="row education-header">
        <div class="title col-xs-3">Education</div>
        
        <a href="" data-toggle="modal" data-target="#add-education-modal">
            <div class="add-education col-xs-1 col-xs-push-8">
                <i class="fas fa-plus-circle"></i>
            </div>
        </a>
    </div>

    <div class="row education-body">
        @foreach (UserEducation item in Model.EducationList)
        {
            <div class="row education-unit col-xs-12">

                <div class="education-unit-logo col-xs-1">
                    <i class="fas fa-university"></i>
                </div>

                <div class="education-unit-details col-xs-9">
                    <div class="education-unit-name">@item.University</div>
                    <span class="education-unit-degree">@item.Degree</span>
                    <span class="education-unit-field">@item.Fieldofstudy</span>
                    <span class="education-unit-grade">Very Good with Honor</span>
                    <div class="education-unit-start-end-year">2013-2017</div>
                </div>
                <a href="" data-toggle="modal" data-target="#edit-education-modal">
                    <div class="edit-education-unit col-xs-1 ">
                        <i class="fas fa-pen"></i>
                    </div>
                </a>
            </div>

            
        }

        <div id="useredureplace" class="row education-unit col-xs-8">

        </div>




    </div>
</div>

<!-- (1)Add Education Modal -->
<div class="modal fade add-education-modal" id="add-education-modal" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel">
    
        <div class="modal-dialog " role="document">

            <div class="modal-content add-education-modal-content">
                <div class="modal-header add-education-modal-header">
                    <span class="add-education-modal-titl">Add Education</span>
                    <a class="close " data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="x">&times;</span>
                    </a>
                </div>
                @using (Ajax.BeginForm("AddUserEducation", "ProfileManager", new AjaxOptions
                {
                    HttpMethod = "Post",
                    InsertionMode = InsertionMode.InsertAfter, //target element(#patientList) will be replaced
                    UpdateTargetId = "useredureplace",
                    //LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
                }
               ))
                {
                    <label class="edit-profile-modal-form-lable">School&nbsp;&nbsp;<span class="requied">*</span></label>
                    <input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput"
                           placeholder="Ex: Boston University">

                    <label class="edit-profile-modal-form-lable">Degree</label>
                    <input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput"
                           placeholder="Ex: Bachelor's">

                    <label class="edit-profile-modal-form-lable">Field of Study</label>
                    <input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput"
                           placeholder="Ex: Engineering">

                    <label class="edit-profile-modal-form-lable">Grade</label>
                    <input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput"
                           placeholder="Current Position">

                    <label class="edit-profile-modal-form-lable">Activities and societies</label>
                    <textarea class="form-control edit-profile-modal-form-textarea" rows="3"></textarea>

                    <label class="edit-profile-modal-form-lable">From Year</label>
                    <div class="dropdown ">
                        <button class="btn btn-default dropdown-toggle edit-profile-modal-form-dropdownlist" type="button"
                                id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Year
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu edit-profile-modal-form-dropdownlist" aria-labelledby="dropdownMenu1">
                            <li><a href="#">2019</a></li>
