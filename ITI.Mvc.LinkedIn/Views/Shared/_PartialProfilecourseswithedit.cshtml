@using ITI.Mvc.LinkedIn.ViewModels

@using ITI.Mvc.LinkedIn.Models.Entities
@model  ITI.Mvc.LinkedIn.ViewModels.AppUserViewModel
<!-- Courses  section -->
<!------------------------------->
<div id="courses-container" class="courses col-lg-push-2 col-lg-8 col-xs-11">
    <div class="row experience-header">


        <div class="title col-xs-4">Courses</div>

        <a href="" data-toggle="modal" data-target="#add-course-modal">
            <div class="add-experience col-xs-1 col-xs-push-7">
                <i class="fas fa-plus-circle"></i>
            </div>
        </a>


    </div>


    <div class=" experience-body">


        @foreach (var item in Model.Courses)

        {
            <div class="row experience-unit skill-unit-details col-xs-12">
                <div class="Skill-name col-xs-10">@item.CourseName</div>

                @*<a href="" id="@item.Id">
                      <div class="skill-remove-icon  col-xs-1">
                          <i class="far fa-trash-alt"></i>
                      </div>
                    </a>*@


                @Ajax.ActionLink(" ","DeleteCourses", "ProfileManager", new { id = item.Id }, new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.ReplaceWith,
                    UpdateTargetId = "_PartialProfilecourseswithedit"
                }, new { @class = "far fa-trash-alt skill-remove-icon  col-xs-1" })



                <a href="" data-toggle="modal" data-target="#edit-course-modal">
                    <div class="add-experience col-xs-1 ">
                        <i class="fas fa-pen"></i>
                    </div>
                </a>

            </div>
        }




    </div>
</div>

<!-- (1)Add Courses Modal -->

@Html.Partial("_PartialAddCourse", new CourseViewModel())

<!-- (2)Edit Courses Modal -->
@Html.Partial("_PartialEditCourse", new CourseViewModel())




<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>