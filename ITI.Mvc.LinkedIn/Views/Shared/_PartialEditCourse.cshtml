@using ITI.Mvc.LinkedIn.Models.Entities
@model ITI.Mvc.LinkedIn.ViewModels.CourseViewModel


<!-- (2)Edit Courses Modal -->
<div class="modal fade add-education-modal add-skill-modal" id="edit-course-modal" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel">
    <form>
        <div class="modal-dialog " role="document">

            <div class="modal-content add-experience-modal-content">
                <div class="modal-header add-experience-modal-header">
                    <span class="add-experience-modal-titl">Add Course</span>
                    <a class="close " data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="x">&times;</span>
                    </a>
                </div>


                <form class="add-experience-modal-form add-skill-modal-form" id="editcourseform">

                    <label class="form-group edit-profile-modal-form-lable">Course Name&nbsp;&nbsp;<span class="requied">*</label>
                    @Html.EditorFor(e => e.course.CourseName, new { htmlAttributes = new { @class = "form-group form-control edit-profile-modal-form-lable-control", @placeholder = "Ex: AutoCAD", @id = "add-course-name-text-field" } })
                    @Html.ValidationMessageFor(model => model.course.CourseName, "", new { @class = "text-danger" })

                    @*<input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput" placeholder="Ex: AutoCAD">*@


                    <div class="form-group">
                        <div class="edit-profile-modal-save col-md-push-2 col-md-10" id="edit-course-btn">
                            <a class="btn edit-profile-modal-save-btn" href="javascript:document.getElementById('editcourseform').submit()">Save</a>
                        </div>
                    </div>


                    @*<div class="edit-profile-modal-save">
                        <button type="submit" class="btn edit-profile-modal-save-btn">Save</button>
                    </div>*@
                </form>

            </div>
        </div>
    </form>


</div>