@using (Ajax.BeginForm("AddComment", "Posts", null, new AjaxOptions
{
	HttpMethod = "POST",
	InsertionMode = InsertionMode.ReplaceWith, //target element(#patientList) will be replaced
	UpdateTargetId = string.Format("post-{0}", Model.mypost.Id),
	//LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}, new { @class = " add-comment-form col-xs-10", id = string.Format("commentform-{0}", Model.mypost.Id), role = "form" }))
{
	@Html.HiddenFor(m => m.mypost.Id)
	<div class="form-group">
		@Html.TextBoxFor(m => m.comment.CommentText, new { @class = "form-control" })
	</div>
	@*<button class="btn btn-default search-btn form-group" type="submit">
			<i class="fas fa-search"></i>
		</button>*@
	@*<input  type="submit" value="search" class="post-btn btn btn-primary col-xs-1 col-xs-offset-3 col-lg-offset-7" />*@
	<a href="javascript:document.getElementById('@string.Format("commentform-{0}", Model.mypost.Id)').submit()">Comment</a>
}