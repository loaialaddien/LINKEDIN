@using ITI.Mvc.LinkedIn.Models.Entities
@model ITI.Mvc.LinkedIn.ViewModels.AppUserViewModel

<div class="  main-profile-section  col-lg-push-2 col-xs-11 col-lg-8">


	<!-- COVER PHOTO  ROW     -->
	<!-------------------------->
	<a href="" data-toggle="modal" data-target="#cover-photo-modal">
		<div class="row cover-img">
			<img src="0 (1).jfif" class="img-responsive" alt="Responsive image">
		</div>
	</a>

	<div class="modal fade " id="cover-photo-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
		<a class="close post-form-modal-cancel" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true" class="x">×</span>
		</a>

		<div class="modal-dialog " role="document">
			<div class="modal-content post-form-modal-content">
				<img src="0 (1).jfif" class="img-responsive" alt="Responsive image">
			</div>
		</div>
	</div>
	<!-- PROFILE PHOTO  ROW     -->
	<!---------------------------->
	<div class="profile-img-container ">
		<a href="" class="" data-toggle="modal" data-target="#profile-photo-modal">
			<div class=" ">
				<img src="6.jpg" class="img-responsive " alt="Responsive image">
			</div>
		</a>
	</div>




	<div class="modal fade " id="profile-photo-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
		<a class="close post-form-modal-cancel" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true" class="x">×</span>
		</a>
		<div class="modal-dialog " role="document">
			<div class="modal-content post-form-modal-content">
				<img src="6.jpg" class="img-responsive profile-img" alt="Responsive image">
			</div>
		</div>
	</div>

	<!-- PROFILE Info  section -->
	<!--------------------------->

	<div class="row col-xs-12 profile-user-data">

		<div class="profile-info   col-lg-4 col-xs-8 col-lg-push-2 col-xs-push-2">
			<div class="user-name"> @Model.User.Fname  @Model.User.Lname</div>
			<div class="user-job">   @Model.User.Industry</div>
			<div class="user-country">Egypt</div>
		</div>

		<!-- <div class=" profile-edit  col-lg-4 col-xs-8 col-lg-pull-1 ">


		</div> -->






		<div class="pro-info col-lg-4 col-xs-8  col-lg-push-4 ">

			<i class="fas fa-university"></i>&nbsp;&nbsp;Assiut University

			<a href="" class="profile-edit-link col-xs-10"><i class="fas fa-book-open"></i>&nbsp;&nbsp;See Contacts</a>
			<a href="" class="profile-edit-link col-xs-10" data-toggle="modal" data-target="#Connections-list-modal"><i class="fas fa-user-friends"></i>&nbsp;&nbsp;See Connections</a>
		</div>


		<!-- See Connections list Modal -->
		<div class="modal fade write-post-modal" id="Connections-list-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
			<!-- likes list  -->
			<div class="Connections-list-modal ">
				<!-- likes list header -->
				<div class="row col-xs-12 Connections-list-modal-header">
					<div class="no-of-connections col-xs-6">75 Connections</div>
					<a class="close connections-list-modal-cancel" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true" class="x">×</span>
					</a>
				</div>
				<!-- like list index info body -->
				<div class="col-xs-12 connections-list-modal-body">
					<div class="row">
						<div class="col-xs-3 ">
							<a href="">
								<div class="connection-view-profile-img  ">
									<img src="6.jpg" class="img-responsive" alt="Responsive image">
								</div>
							</a>

						</div>

						<div class="connection-data   col-xs-5">
							<a href="" class="connection-owner ">
								<div class="connection-owner">Ahmed Ben Alaa</div>
							</a>
							<div class="connection-owner-titel">Civil Engineer</div>
						</div>
					</div>
					<hr>


				</div>
			</div>


		</div>

	</div>




</div>
