@model ITI.Mvc.LinkedIn.ViewModels.LanguageViewModel


<div class="modal fade add-education-modal add-skill-modal" id="edit-language-modal" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel">
    <form>
        <div class="modal-dialog " role="document">

            <div class="modal-content add-experience-modal-content">
                <div class="modal-header add-experience-modal-header">
                    <span class="add-experience-modal-titl">Add Skill</span>
                    <a class="close " data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="x">&times;</span>
                    </a>
                </div>


                <form class="add-experience-modal-form add-skill-modal-form" id="editlanguageform">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <label class="edit-profile-modal-form-lable">Language</label>

                    @Html.EditorFor(model => model.language.Name, new { htmlAttributes = new { @class = "form-control edit-profile-modal-form-lable-control" } })
                    @Html.ValidationMessageFor(model => model.language.Name, "", new { @class = "text-danger" })

                    @*<input type="text" class="form-control edit-profile-modal-form-lable-control" id="formGroupExampleInput" placeholder="Ex: Arabic">*@





                    @*<div class="edit-profile-modal-save">
                        <button type="submit" class="btn edit-profile-modal-save-btn">Save</button>
                    </div>*@

                    <div class="form-group">
                        <div class="edit-profile-modal-save col-md-offset-2 col-md-10" id="edit-language-btn">
                            <a class="btn edit-profile-modal-save-btn" href="javascript:document.getElementById('editlanguageform').submit()">Add</a>
                        </div>
                    </div>


                </form>

            </div>
        </div>
    </form>


</div>
