@model ITI.Mvc.LinkedIn.ViewModels.LanguageViewModel

@{
	ViewBag.Title = "Edit Language";
}

<h2>Langauages View</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>langauge</h4>
		<hr />
