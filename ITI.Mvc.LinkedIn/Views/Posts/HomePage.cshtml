
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <link href="~/Style and structure/Home-Page/bootstrap.css" rel="stylesheet" />
    <link href="~/Style and structure/Home-Page/home-style.css" rel="stylesheet" />

    <title>Home page</title>
</head>

<body>


    @Html.Partial("_PartialTopNavBar")

    <div class="row main-container">


        <!-- Profile info Section -->
        <div class="profile-info  visible-lg col-lg-offset-1 col-lg-2">

            <div class="profile-info-cover-img ">
                <img src="4.png" class="img-responsive" alt="Responsive image">
            </div>

            <a href="">
                <div class="profile-img-container">
                    <img src="6.jpg" class="img-responsive" alt="Responsive image">
                </div>
            </a>

            <div class="welcome">Welcome, Ahmed!</div>
            <a href="#" class="update">Update your Profile</a>
            <div class="divider"></div>
            <a href="#" class="other">Connections</a>
            <br>
            <br>
            <a href="#" class="other">Grow Your Network</a>

        </div>






        <!-- Posts Section -->
        <div class="post-container col-lg-5  col-m-12 col-s-12 col-xs-12">

            <!-- Start Post Section -->
            <div class="start-post  col-lg-12">
                <div class="write-post">
                    <div class="row ">

                        <a href="" data-toggle="modal" data-target="#post-form-modal">
                            <div class="start col-xs-6">
                                <i class="fas fa-edit "></i>Start a Post
                            </div>
                        </a>

                        <div class="modal fade write-post-modal" id="post-form-modal" tabindex="-1" role="dialog"
                             aria-labelledby="myLargeModalLabel">

                            <form>
                                <div class="modal-dialog " role="document">

                                    <div class="modal-content post-form-modal-content">
                                        <div class="modal-header post-form-modal-header">
                                            <a class="close post-form-modal-cancel" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true" class="x">&times;</span>
                                            </a>
                                        </div>

                                        <div class="post-form-profile-img">
                                            <img src="6.jpg" class="img-responsive" alt="Responsive image">
                                        </div>

                                        <textarea class="form-control post-write-area"
                                                  placeholder="What do you want to talk abou?"></textarea>
                                        <hr>

                                        <div class="hashtag">
                                            <a href="" class="hashtag-link link">+ Add hashtag</a>
                                            <span class="hashtag-hint">Help the right people see your post</span>
                                        </div>
                                        <hr>

                                        <div class="row post-add-media">
                                            <a href="#">
                                                <div class="post-media col-xs-2">
                                                    <i class="fas fa-camera"></i>
                                                    <input type="file" class="upload">
                                                </div>
                                            </a>

                                            <a href="#">
                                                <div class="post-media col-xs-2">
                                                    <i class="fas fa-video"></i>
                                                    <input type="file" class="upload">
                                                </div>
                                            </a>

                                            <a href="#">
                                                <div class="post-media col-xs-2">
                                                    <i class="fas fa-file"></i>
                                                    <input type="file" class="upload">
                                                </div>
                                            </a>
                                            <button type="submit" class=" post-btn btn btn-primary col-xs-1 col-xs-offset-3 col-lg-offset-7"
                                                    aria-label="Post">
                                                Post
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>


                        </div>


                        <a href="#">
                            <div class="post-content col-xs-2">
                                <i class="fas fa-camera"></i>

                            </div>
                        </a>
                        <a href="#">
                            <div class="post-content col-xs-2">
                                <i class="fas fa-video"></i>
                            </div>
                        </a>
                        <a href="#">
                            <div class="post-content col-xs-2">
                                <i class="fas fa-file"></i>
                            </div>
                        </a>


                    </div>
                </div>


                <div class="atricle col-xs-12">
                    <a href="#" class="artical-link"><i class="far fa-newspaper"></i>Write an Article</a>&nbsp; on Linkedin
                </div>



            </div>


            <!-- Show Posts Section -->
            <div class="post col-xs-12">
                <!-- Posts Header Section -->
                <div class="row col-xs-12">
                    <div class="col-lg-2 col-m-2 col-xs-3">
                        <a href="">
                            <div class="post-view-profile-img  ">
                                <img src="6.jpg" class="img-responsive" alt="Responsive image">
                            </div>
                        </a>

                    </div>

                    <div class="post-data col-lg-4  col-xs-5">
                        <a href="" class="post-owner">
                            <div class="post-owner">Ahmed Ben Alaa</div>
                        </a>

                        <div class="post-owner-titel">Civil Engineer</div>
                        <div class="post-time">2d</div>
                    </div>
                    <a href="">
                        <div class="col-xs1-1 col-xs-offset-12 post-control">....</div>
                    </a>
                </div>


                <!-- Posts data Section -->
                <div class=" col-xs-12 post-data-content">


                    <!-- Posts Text Section -->
                    <p class="post-content-text">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto, ducimus iusto blanditiis amet ipsum hic
                        veniam dolore vero, praesentium soluta nesciunt voluptates enim voluptate inventore! Eos quidem eius magnam
                        odio?
                    </p>



                    <!-- Posts Imag Section -->
                    <!-- Posts Imag Modal -->
                    <a href="" class="" data-toggle="modal" data-target="#view-post-img-modal">
                        <div>
                            <img src="6.jpg" class="img-responsive post-content-img" alt="Responsive image">
                        </div>
                    </a>

                    <div class="modal fade view-post-img-modal" id="view-post-img-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                        <a class="close post-form-modal-cancel" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="x">&times;</span>
                        </a>
                        <div class="modal-dialog " role="document">
                            <div class="modal-content post-form-modal-content">
                                <img src="6.jpg" class="img-responsive" alt="Responsive image">
                            </div>
                        </div>
                    </div>
                </div>




                <!-- Posts control-Likes-Comments Section -->
                <div class="row col-xs-12 post-interaction">

                    <!-- Posts Likes-Comments Linkes Section -->
                    <div class="row col-xs-12 likes-comment-index">
                        <a href="" class="col-xs-1 likes-link" data-toggle="modal" data-target="#likes-list-modal">like</a>
                        <div class="modal fade write-post-modal" id="likes-list-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">


                            <!-- likes list  -->
                            <div class="likes-list ">
                                <!-- likes list header -->
                                <div class="row col-xs-12 likes-list-modal-header">
                                    <div class="no-of-liks col-xs-4">75 Likes</div>
                                    <a class="close likes-list-modal-cancel" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true" class="x">&times;</span>
                                    </a>
                                </div>
                                <!-- like list index info body -->
                                <div class="col-xs-12 likes-list-modal-body">
                                    <div class="row">
                                        <div class="col-xs-3 ">
                                            <a href="">
                                                <div class="post-view-profile-img  ">
                                                    <img src="6.jpg" class="img-responsive" alt="Responsive image">
                                                </div>
                                            </a>

                                        </div>

                                        <div class="post-data   col-xs-5">
                                            <a href="" class="post-owner ">
                                                <div class="post-owner">Ahmed Ben Alaa</div>
                                            </a>
                                            <div class="post-owner-titel">Civil Engineer</div>
                                        </div>
                                    </div>
                                    <hr>


                                </div>
                            </div>


                        </div>
                        <a href="" class="col-xs-1 comments-link">comment</a>
                    </div>

                </div>

                <!-- Posts Likes-Comments-share buttons Section -->
                <div class="row col-xs-12 Likes-Comments-share-btns">
                    <button class="btn btn-primary like-btn"><i class="fas fa-thumbs-up"></i>&nbsp;&nbsp;like</button>
                    <button class="btn btn-primary comment-btn"><i class="fas fa-comment-alt"></i>&nbsp;&nbsp;Comment</button>
                    <button class="btn btn-primary share-btn"><i class="fas fa-share"></i>&nbsp;&nbsp;Share</button>
                </div>



            </div>
        </div>










        <!-- Copy Rights Section -->
        <div class="copy-rights visible-lg col-lg-2">
            <div class="divider"></div>
            <a href="#" class="copy-rights-links">About</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#" class="copy-rights-links">Help Center</a>
            <br>
            <br>
            <a href="#" class="copy-rights-links">Privacy&Terms</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#" class="copy-rights-links">Advertising</a>
            <br>
            <br>
            <a href="#" class="copy-rights-links">Business Services</a>
            <br>
            <br>
            <a href="#" class="copy-rights-links">Get the Linkedin app</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#" class="copy-rights-links">More</a>
            <div class="copy-rights-brand" id="">
                Linked<i class="fab fa-linkedin copy-rights-icon"></i><span class="copy-rights-mark">&nbsp;&nbsp;&nbsp;Linkedin Corporation &copy; 2019</span>
            </div>
        </div>

    </div>


















    <!-- Messages Menu Section -->
    <div class="message-menu col-lg-2 col-lg-offset-9 visible-lg navbar-fixed-bottom">
        <div class=" container-fluid  btn  my-2 my-sm-0 message-btn  col-lg-1 col-xs-12 " id="messege-btn">
            <div class="message-btn-text col-lg-3">Messages</div>
            <div class="message-btn-icons col-lg-4 col-lg-offset-5">
                <i class="far fa-edit "></i>
                <i class="fas fa-cog"></i>
            </div>
        </div>

        <div class="container-fluid  message-menu-body" id="message-body"></div>
    </div>
    <script src="~/Style and structure/Home-Page/jquery-3.3.1.min.js"></script>
    <script src="~/Style and structure/Home-Page/bootstrap.min.js"></script>
    <script src="~/Style and structure/Home-Page/home-app.js"></script>

</body>

</html>
